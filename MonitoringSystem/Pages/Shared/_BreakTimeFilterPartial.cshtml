@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MonitoringSystem.Pages.Shared.ApplyBreakFilterModel

<form method="post" asp-page="/Shared/ApplyBreakFilter" asp-page-handler="SaveBreakTime" class="align-items-center text-center mx-4">
    <div class="form-group mb-4">
        <label for="BreakTime1Start" class="fw-bold mb-2">Additional Break 1</label>
        <div class="d-flex gap-2">
            <input type="time" asp-for="BreakTime1Start" class="form-control" id="BreakTime1Start" name="BreakTime1Start" value="@(Model?.BreakTime1Start?.ToString(@"hh\:mm"))" />
            <span class="align-self-center">-</span>
            <input type="time" asp-for="BreakTime1End" class="form-control" id="BreakTime1End" name="BreakTime1End" value="@(Model?.BreakTime1End?.ToString(@"hh\:mm"))" />
        </div>
    </div>
    <div class="form-group mb-3">
        <label for="BreakTime2Start" class="fw-bold mb-2">Additional Break 2 </label>
        <div class="d-flex gap-2">
            <input type="time" asp-for="BreakTime2Start" class="form-control" id="BreakTime2Start" name="BreakTime2Start" value="@(Model?.BreakTime2Start?.ToString(@"hh\:mm"))" />
            <span class="align-self-center">-</span>
            <input type="time" asp-for="BreakTime2End" class="form-control" id="BreakTime2End" name="BreakTime2End" value="@(Model?.BreakTime2End?.ToString(@"hh\:mm"))" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary mb-3">Save Break Time</button>
</form>